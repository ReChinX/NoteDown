<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/framelayout_content"
        android:layout_width="fill_parent"
        android:layout_height="72.0dip"
        android:layout_marginBottom="1.0dip"
        android:layout_marginLeft="12.0dip"
        android:layout_marginRight="12.0dip"
        android:layout_marginTop="8.0dip"
        android:background="@drawable/layout_selector"
        android:foreground="@drawable/layout_selector_tran">

        <View
            android:layout_width="26.0dip"
            android:layout_height="fill_parent"
            android:background="#06000000" />

        <View
            android:layout_width="1.0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="26.0dip"
            android:background="#0a000000" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_marginTop="26.0dip"
            android:background="#08000000" />

        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@id/tv_modify_time"
                android:layout_width="120.0dip"
                android:layout_height="26.0dip"
                android:layout_marginLeft="40.0dip"
                android:gravity="center_vertical"
                android:textColor="@color/textColor2"
                android:textSize="10.0sp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@id/tv_title"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="40.0dip"
                    android:layout_toLeftOf="@id/iv_hasImage"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/textColor1"
                    android:textSize="14.0sp" />

                <ImageView
                    android:id="@+id/iv_hasImage"
                    android:layout_width="16.0dip"
                    android:layout_height="16.0dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8.0dip"
                    android:layout_marginRight="16.0dip"
                    android:scaleType="centerInside"
                    android:tint="@color/grey"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/lock" />
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>